# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/callback
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# OpenAI Configuration (optional - can use free tier)
OPENAI_API_KEY=your_openai_api_key

# Ollama Configuration (free local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8080
MCP_API_KEY=your_mcp_api_key

# Web Scraping Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=30

# Content Generation Configuration
CONTENT_TOPIC=artificial intelligence
POSTING_SCHEDULE=0 9 * * *  # Daily at 9 AM
MAX_CONTENT_LENGTH=3000
ENABLE_GRAPHS=true
ENABLE_SLIDES=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/linkedin_automation.log

# Database Configuration (for content tracking)
DATABASE_URL=sqlite:///data/content_history.db